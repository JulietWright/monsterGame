		cout << "burns on your right arm. Because you were too weak to fight, the witch" << endl;
		cout << "electrocuted you to death." << endl;
		cout << "GAME OVER" << endl;
		cout << "\nWould you like to play again? Answer ‘y’ for yes and ‘n’ for no\n";
		cin >> playAgain;
		playAgain = tolower(playAgain);
		
		while (playAgain != 'n' && playAgain != 'y')
		{
			cout << "You did not answer ‘y’ or ‘n’ to the previous question. Try again!\n";
			cin >> playAgain;
			playAgain = tolower(playAgain);
		}
	continue;   //necessary so the program terminates this iteration only
	}
	//Specification B3 - Add treasure - the treasure is the princess
	else if (weapon == 2)
	{
		cout << "\nSmart thinking, " << name << "! You have successfully killed the " << endl;
		cout << "the witch. Once she has died, you run over to the key and free" << endl;
		cout << "the princess from her shackles. Now that you are both free and " << endl;
		cout << "and safe, you must find the three exit doors. Understandably, you " << endl; 
		cout << "were very stressed while fighting the various monsters in the six" << endl; 
		cout << "rooms you encountered. You most likely did not notice that only one" << endl;
		cout << "of those rooms contained the three exit doors from the dungeon. Now " << endl; 
		cout << "you must look around the dungeon rooms to find the three exit doors." << endl;
		cout << "You and the princess have left room six into a dungeon hall." << endl; 
		cout << "You are surrounded by six doors. Each leads to different room." << endl;
	}
		
		
	do
	{
		cout << "\nHere is a layout of your surroundings:" << endl; 
		cout << "Room 1 is to your right." << endl; 
		cout << "Room 2 is to your left." << endl; 
		cout << "Room 3 is in front of you." << endl; 
		cout << "Room 4 is behind you." << endl; 
		cout << "Room 5 is northeast to you" << endl; 
		cout << "Room 6 is northwest to you" << endl;
		cout << "\nThere are 6 different keys you can use to move around as follows:" << endl; 
			location2 ( ); 
		cout << "Where would you like to look? Enter N, S, E, W, X, or Y to move." << endl; 
		cin >> move; 
		move = toupper(move); 
		
			while (move != 'N' && move != 'S' && move != 'E' && move != 'W' && move != 'X' && move != 'Y')
			{
				cout << "You did not enter N, S, E, W, X, or Y! Please try again:";
				cin >> move; 
				move = toupper(move); 
			} 
		
		if (move == 'N')
		{
			cout << "You have entered Room 3. Would you like to read a description on it?" << endl;
			cout << "Enter 'y' for yes and 'n' for no." << endl; 
			cin >> detail; 
			detail = tolower(detail);
				
				while (detail != 'y' && detail != 'n')
				{
					cout << "You did not enter 'y' or 'n'! Please try again:";
					cin >> detail; 
					detail = tolower(detail);
				}
			
				if (detail == 'y')
				{
					// Specification C5 - Detailed Look
					room3D ( ); 
				}
			
			cout << "\nUnfortunately there are no exit rooms in room 3. You step outside of" << endl; 
			cout << "room 3 into the dungeon hall to continue your search." << endl; 
		}
		else if (move == 'S')
		{
			cout << "You have entered Room 4. Would you like to read a description on it?" << endl;
			cout << "Enter 'y' for yes and 'n' for no." << endl; 
			cin >> detail; 
			detail = tolower(detail);
				
				while (detail != 'y' && detail != 'n')
				{
					cout << "You did not enter 'y' or 'n'! Please try again:";
					cin >> detail; 
					detail = tolower(detail);
				}
			
				if (detail == 'y')
				{
					// Specification C5 - Detailed Look
					room4D ( ); 
				}
			
			cout << "\nUnfortunately there are no exit rooms in room 4. You step outside of" << endl; 
			cout << "room 4 into the dungeon hall to continue your search." << endl; 
		}
		else if (move == 'W')
		{
			cout << "You have entered Room 2. Would you like to read a description on it?" << endl;
			cout << "Enter 'y' for yes and 'n' for no." << endl; 
			cin >> detail; 
			detail = tolower(detail);
				
				while (detail != 'y' && detail != 'n')
				{
					cout << "You did not enter 'y' or 'n'! Please try again:";
					cin >> detail; 
					detail = tolower(detail);
				}
			
				if (detail == 'y')
				{
					// Specification C5 - Detailed Look
					room2D ( ); 
				}
			
			cout << "\nUnfortunately there are no exit rooms in room 2. You step outside of" << endl; 
			cout << "room 2 into the dungeon hall to continue your search." << endl; 
		}
		else if (move == 'X')
		{
			cout << "You have entered Room 5. Would you like to read a description on it?" << endl;
			cout << "Enter 'y' for yes and 'n' for no." << endl; 
			cin >> detail; 
			detail = tolower(detail);
				
				while (detail != 'y' && detail != 'n')
				{
					cout << "You did not enter 'y' or 'n'! Please try again:";
					cin >> detail; 
					detail = tolower(detail);
				}
			
				if (detail == 'y')
				{
					// Specification C5 - Detailed Look
					room5D ( ); 
				}
			
			cout << "\nUnfortunately there are no exit rooms in room 5. You step outside of" << endl; 
			cout << "room 5 into the dungeon hall to continue your search." << endl; 
		}
		else if (move == 'Y')
		{
			cout << "You have entered Room 6. Would you like to read a description on it?" << endl;
			cout << "Enter 'y' for yes and 'n' for no." << endl; 
			cin >> detail; 
			detail = tolower(detail);
				
				while (detail != 'y' && detail != 'n')
				{
					cout << "You did not enter 'y' or 'n'! Please try again:";
					cin >> detail; 
					detail = tolower(detail);
				}
			
				if (detail == 'y')
				{
					// Specification C5 - Detailed Look
					room6D ( ); 
				}
			
			cout << "\nUnfortunately there are no exit rooms in room 6. You step outside of" << endl; 
			cout << "room 6 into the dungeon hall to continue your search." << endl; 
		}
		else if (move == 'E')
		{
			cout << "You have entered Room 1. Would you like to read a description on it?" << endl;
			cout << "Enter 'y' for yes and 'n' for no." << endl; 
			cin >> detail; 
			detail = tolower(detail);
				
				while (detail != 'y' && detail != 'n')
				{
					cout << "You did not enter 'y' or 'n'! Please try again:";
					cin >> detail; 
					detail = tolower(detail);
				}
			
				if (detail == 'y')
				{
					// Specification C5 - Detailed Look
					room1D ( ); 
				}
			
			cout << "\nGreat job, " << name << "! You have entered the right room that contains" << endl;
			cout << "the three exit doors. It is time for you and the princess to safely leave" << endl;
			cout << "the dungeon." << endl;
		}
	
	}while (move != 'E');
		
		
		cout << "Together, you and the princess both walk towards" << endl;
		cout << "a wall containing three exits doors. Each of them are colored differently" << endl;
		cout << "The first door is blue, the second door is red, and the third door is green." << endl;
		cout << "Enter the 1, 2, or 3 for the door you would like to exit through:" << endl;
		cout << "1 - Blue door" << endl;
		cout << "2 - Red door" << endl;
		cout << "3 - Green door" << endl;
		cout << "\nRemember what you learned in the beginning of the game! Only ONE" << endl;
		cout << "door will lead you and the princess to safety. The other two are" << endl;
		cout << "booby-trapped and will result in your ultimate demise. Choose wisely." << endl;
		cin >> exitDoor;
		
			if (exitDoor == 2)
			{
				cout << "CONGRATULATIONS! You’ve chosen the right door and have" << endl;
				cout << "made it out of the dungeon safely with princess Emmy." << endl;
				cout << "YOU WIN!!!" << endl;
			}
			else
			{
				cout << "Oh no, you choose the wrong door. Once you opened the" << endl;
				cout << "door, knives shot out at you and the princess resulting" << endl;
				cout << "in both of your deaths :(" << endl;
				cout << "GAME OVER" << endl;
			}
	
	cout << "\nWould you like to play again? Answer ‘y’ for yes and ‘n’ for no\n";
	cin >> playAgain;
	playAgain = tolower(playAgain);
	
		while (playAgain != 'n' && playAgain != 'y')
		{
			cout << "You did not answer ‘y’ or ‘n’ to the previous question. Try again!\n";
			cin >> playAgain;
			playAgain = tolower(playAgain);
		}
	
}while (playAgain == 'y');
	
	return (0);
	
}

